        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="tagId != null">tag_id,</if>
                <if test="tagName != null">tag_name,</if>
                <if test="articleCount != null">article_count,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
