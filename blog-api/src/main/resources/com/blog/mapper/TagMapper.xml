                    article_count = #{articleCount,jdbcType=INTEGER},
                </if>
        </set>
        where   tag_id = #{tagId,jdbcType=INTEGER} 
    </update>
    <update id="updateByPrimaryKey" parameterType="com.blog.pojo.Tag">
